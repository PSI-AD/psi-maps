rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Projects — public read, authenticated write
    match /projects/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Landmarks — public read, authenticated write
    match /landmarks/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Presentations — fully public (no auth required for client slideshows)
    match /presentations/{document} {
      allow read, write: if true;
    }
    // Settings — public read so global settings load without login
    match /settings/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // All other collections — require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
